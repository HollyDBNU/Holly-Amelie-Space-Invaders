# mysteryship.py
import pygame

class MysteryShip(pygame.sprite.Sprite):
    
    def __init__(self, screen_width, y_position, speed=-3):
        super().__init__()

        # Try to load art; fall back to a simple colored rect if missing.
        try:
            self.image = pygame.image.load("Graphics/mystery.png").convert_alpha()
        except Exception:
            self.image = pygame.Surface((60, 25))
            self.image.fill((255, 200, 50))

        # Start just off the right edge so it flies across the screen
        self.rect = self.image.get_rect(midleft=(screen_width + 40, y_position))
        self.speed = speed
        self.screen_width = screen_width

    def update(self):
        # Move horizontally (negative speed moves left)
        self.rect.x += self.speed

        # Remove when completely off the left side of the screen
        if self.rect.right < 0:
            self.kill()
